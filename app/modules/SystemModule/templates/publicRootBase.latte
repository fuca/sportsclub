{* Public section root base template *}

{layout ./@publicLayout.latte}

{block #content}

<div class="layout-{include #side} row">
    <div class="col-md-4 col-lg-3">
	<div class="row">
	    {include #sideBlock}
	</div>
    </div>
	
    <div class="col-md-8 col-lg-9">

	    {snippet flash}
		<div n:foreach="$flashes as $flash" class="{$flash->type}">
		    <button type="button" class="close" data-dismiss="alert">Ã—</button>
		    {$flash->message}
		</div>
	    {/snippet}
	    
	    <ol class="breadcrumb">
		<li class="breadcrumb-top">
		    <a href="{plink :System:Homepage:default}" class="home">&nbsp;</a> 
		</li>
		{include #breadcrumbs}
	    </ol>
	    {include #mainBlock}
    </div>

</div>
